executable vampire-proof-check
  import:           warnings
  main-is:          Main.hs
  build-depends:    base >=4.11 && <4.12
                  -- , vampire-proof-checker
                  , containers
                  , megaparsec
                  , optparse-applicative
                  , parser-combinators
                  , text
